<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/szoveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Covid Oltás Regisztráció"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24sp"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/maszkoskep"
        android:layout_width="480sp"
        android:layout_height="320sp"
        android:src="@drawable/maszkoskep"
        android:layout_below="@id/szoveg" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maszkoskep"
        android:hint="@string/e_mail_c_m"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:autofillHints="" />
    <EditText
        android:id="@+id/taj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:hint="@string/taj_sz_m"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:autofillHints="" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/taj"
        android:text="@string/regisztr_lok"
        android:layout_marginTop="32sp"/>

</RelativeLayout>